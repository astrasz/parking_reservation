<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Parking Reservation
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		{% if app.user %}
			<nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 80px;">
				<p class="my-5 mx-5">
					<a class="navbar-brand" href="/">Parking Reservation</a>
				</p>


				<div class="mx-10">
					<strong>You are logged in as
						{{ app.user.email }}</strong>
				</div>
				<div class="collapse navbar-collapse"></div>
				<ul class="nav navbar-nav navbar-right mx-5">
					<li>
						<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
					</li>
				</ul>
			</nav>
		{% endif %}

		{% block body %}{% endblock %}
	</body>
</html>
