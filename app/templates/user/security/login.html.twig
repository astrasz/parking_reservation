{% extends 'base.html.twig' %}

{% block title %}Sign in
{% endblock %}

{% block body %}
	<div class="vh-100 d-flex flex-column  align-items-center justify-content-center" style="background-image: url({{asset('images/bg-cars.jpg')}});">

		{% for message in app.flashes('error') %}
			<div class="alert alert-danger w-50 text-center" role="alert">
				<small>{{ message }}</small>
			</div>
		{% endfor %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success w-50 text-center" role="alert">
				<small>{{ message }}</small>
			</div>
		{% endfor %}

		<div class="card h-50 w-50" style="min-width: 450px; min-height: 400px">
			<div class="card-body p-5">
				<form method="post">

					<h2 class="text-uppercase text-center mb-3">Please sign in</h2>

					<div class="form-outline mb-4">
						<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control form-control-lg" autocomplete="email" required autofocus>
						<label for="username" class="form-label">Email</label>
					</div>

					<div class="form-outline mb-4">
						<input type="password" name="_password" id="password" class="form-control form-control-lg" autocomplete="current-password" required>
						<label for="password" class="form-label">Password</label>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>

					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-success btn-block btn-lg text-body">Sign in</button>
					</div>

					<p class="text-center text-muted mt-3 mb-0">Have you not account yet?
						<a href="{{path('app_register')}}" class="fw-bold text-body">
							<u>Sign up here</u>
						</a>
					</p>
				</form>

			</div>
		</div>
	</div>


{% endblock %}
