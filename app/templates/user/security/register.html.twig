{% extends 'base.html.twig' %}

{% block title %}Sign up
{% endblock %}

{% block body %}
	<div class="vh-100 d-flex flex-column  align-items-center justify-content-center" style="background-image: url({{asset('images/bg-cars.jpg')}});">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success w-50 text-center" role="alert">
				<small>{{ message }}</small>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger w-50 text-center" role="alert">
				<small>{{ message }}</small>
			</div>
		{% endfor %}

		<div class="card" style="min-width: 450px; min-height: 600px">
			<div class="card-body p-5">

				<h2 class="text-uppercase text-center mb-3">Create an account</h2>
				{{ form_start(registrationForm, {"attr": {"autocomplete": "off", "novalidate": "novalidate" }}) }}

				<div class="border-start border-end border-danger small mb-4">{{ form_errors(registrationForm) }}</div>

				<div class="form-outline mb-4">
					<input type="email" id="{{ field_name(registrationForm.email) }}" name="{{ field_name(registrationForm.email) }}" class="form-control form-control-lg" value="{{ field_value(registrationForm.email) }}"/>
					<label class="form-label" for="{{ field_name(registrationForm.email) }}">{{field_label(registrationForm.email)}}</label>
				</div>

				<div class="form-outline mb-4">
					<input type="password" id="{{ field_name(registrationForm.password.first) }}" name="{{ field_name(registrationForm.password.first) }}" class="form-control form-control-lg" value="{{ field_value(registrationForm.password.first) }}"/>
					<label class="form-label" for="{{ field_name(registrationForm.password.first) }}">{{ field_label( registrationForm.password.first)}}</label>
				</div>

				<div class="form-outline mb-5">
					<input type="password" id="{{ field_name(registrationForm.password.second) }}" name="{{ field_name(registrationForm.password.second) }}" class="form-control form-control-lg" value="{{ field_value(registrationForm.password.second )}}"/>
					<label class="form-label" for="repeated">{{ field_label(registrationForm.password.second) }}</label>
				</div>

				<div class="form-check d-flex justify-content-center mb-3">
					<input class="form-check-input me-2 border-success" type="checkbox" value="{{ field_value(registrationForm.agreeTerms) }}" id="{{ field_name(registrationForm.agreeTerms) }}" name="{{ field_name(registrationForm.agreeTerms) }}"/>
					<label class="form-check-label" for="{{ field_name(registrationForm.agreeTerms) }}">
						I agree all statements in
						<a href="#!" class="text-body">
							<u>Terms of service</u>
						</a>
					</label>
				</div>

				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-success btn-block btn-lg text-body">Register</button>
				</div>

				<p class="text-center text-muted mt-3 mb-2">Have already an account?
					<a href="{{path('app_login')}}" class="fw-bold text-body">
						<u>Login here</u>
					</a>
				</p>

				{{form_end(registrationForm)}}
			</div>
		</div>


	</div>
{% endblock %}
